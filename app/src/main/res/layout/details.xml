<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
        tools:context=".Details">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <!--    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView-->
    <!--        android:id="@+id/youtube_player_view"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="200dp"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintBottom_toTopOf="@+id/imageView"-->
    <!--        app:videoId="S0Q4gqBUs7c"-->
    <!--        app:autoPlay="true"-->
    <!--        app:showFullScreenButton="false" />-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="175dp"
            android:layout_marginBottom="24dp"

            app:srcCompat="@drawable/movie_placeholder"
            tools:layout_editor_absoluteX="0dp" />

            <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="Spirited Away"
        android:layout_below="@id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="23dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="Overview"
        android:layout_below="@id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" Overview content asdfghjklqwertyuiop"
        android:layout_below="@id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Genres"
        android:layout_below="@id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Genre content"
        android:layout_below="@id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Year"
        android:layout_below="@id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="2019"
        android:layout_below="@id/textView6" />

    <ImageButton
        android:id="@+id/addwatch"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:src="@drawable/addwatch"
        android:onClick="addBookmark"
        tools:ignore="OnClick"
        android:layout_below="@id/textView7"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cast"
        android:layout_below="@id/addwatch" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/castlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
